{
    "repositories": {
        "wpforms-phpcs": {
            "type": "git",
            "url": "https://github.com/awesomemotive/wpforms-phpcs.git"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "awesomemotive/wpforms-phpcs": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "WPHC\\": "src"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=phpcs.xml.dist -s --colors"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
